/* miniprogram/template/coupon/coupon.wxss */

.coupon{
  width: 100%;
  border: 1rpx #4a86e8 solid;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  padding: 20rpx;
  box-sizing: border-box;
}
.header{
  width: 100%;
  height: 100rpx;
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  padding: 20rpx 0rpx;
  box-sizing: border-box;
}
.header>view:nth-child(1){
  width: 25%;
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  color:#4a86e8;
  border-right:1rpx #96CDCD dashed;
}
.header>view:nth-child(2){
  width: 75%;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  justify-content: space-around;
  padding-left: 40rpx;
  color:#4a86e8;
}
.validity{
  color: #636363;
  font-size: 24rpx;
}
.section{
  width: 100%;
  display: flex;
  display: -webkit-flex;
  justify-content: flex-end;
}
.section>text{
  font-size: 24rpx;
  color: #636363;
}
.footer{
  width: 100%;
  border-top: 1rpx #4a86e8 dashed;
  margin-top:40rpx;
  padding-top:40rpx;
  font-size: 24rpx;
  color: #454545;
}
.big{
  font-size: x-large;
}