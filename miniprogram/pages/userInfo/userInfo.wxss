/* pages/userInfo/userInfo.wxss */
page {
  width: 100%;
  height: 100%;
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-size: 32rpx;
}
.container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.portrait,.userName,.sex,.tel{
  width: 100%;
  height: 112rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0rpx 40rpx;
  box-sizing: border-box;
  border-bottom: 1rpx gainsboro solid;
}
.exit{
  width: 100%;
  height: 10%;
  display: flex;
  flex-direction:row;
  justify-content: center;
  align-items: flex-end; 
}
.exit>text{
  width: 90%;
  height: 72rpx;
  background-color:#4a86e8;
  text-align: center;
  line-height: 72rpx;
  color: white;
}
.portrait>text,.userName>text,.sex>text,.tel>text{
  width: 50%;
}
.portrait>view{
  width: 50%;
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
.text_right{
  /* width: 100%; */
  text-align: right;
}
.userLogin image{
  width: 2.2em;
  height: 2.2em;
  border-radius: 50%;
  border: 1rpx white solid;

}