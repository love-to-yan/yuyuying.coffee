/* pages/login/login.wxss */

page {
  width: 100%;
  height: 100%;
  background: #f6f6f6;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  justify-content: flex-start;
  font-size: 32rpx;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
}

.header {
  height: 40%;
  width: 100%;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.header image{
width: 3em;
height: 3em;
}
.header text{
  padding: 20rpx;
}
.section {
  height: 20%;
  width: 100%;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
}
.section text{
  padding:26rpx 70rpx;
  box-sizing: border-box;
}

.section>text:nth-child(2) {
  font-size: 26rpx;
  color: #636363;
}
.footer{
  height: 160rpx;
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}
.footer button{
  width: 100%;
  height: 100rpx;
  border-radius: 10rpx;
  background-color: green;
  color: white;
  line-height: 100rpx;
}
