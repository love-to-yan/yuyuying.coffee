/* pages/order/order.wxss */
@import '../../style/guide.wxss';

page {
  width: 100%;
  height: 100%;
  background: #f6f6f6;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  justify-content: flex-start;
}
.zeroOrder{
  width: 100%;
  height: 100%;
  background: #f6f6f6;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.zeroOrder>image{
  width: 120rpx;
  height: 160rpx;
}
.zeroOrder>text{
  font-size: .8em;
}
.zeroOrder>view{
  border: 1rpx #4a86e8 solid;
  padding: 10rpx 40rpx;
  box-sizing: border-box; 
  margin-top:60rpx;
}
.toMenu{
  font-size: 24rpx;
  color: #4a86e8;
}
