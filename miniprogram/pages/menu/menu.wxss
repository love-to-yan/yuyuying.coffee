/* pages/menu/menu.wxss */
@import '../../style/guide.wxss';

page {
  width: 100%;
  height: 100%;
  background: #f6f6f6;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  justify-content: flex-start;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.header {
  width: 100%;
  height: 30%;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  justify-content: flex-start;
  border: 1px rebeccapurple solid;
}

.position {
  height: 33%;
  border: 1px red solid;
}

.carousel {
  height: 67%;
  border: 1px orange solid;
}

.section {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  display: -webkit-flex;
  border: 1px orange solid;
  font-size: 26rpx;
}

.left {
  width: 20%;
  height: 100%;
  border: 1rpx rebeccapurple solid;
}

.right {
  width: 80%;
  height: 100%;
}

scroll-view {
  padding-left: 1rem;
  padding-top: 1rem;
  box-sizing: border-box;
  background-color: white;
}

.title {
  width: 100%;
  height: 10%;
}

.section {
  background-color: gainsboro;
}

.titleSelected {
  background-color: white;
}

.caption>text:nth-child(2) {
  color: gainsboro;
  font-size: 20rpx;
}

.coffeeImg {
  width: 20%;
  height: 100%;
}

.info {
  width: 70%;
  height: 100%;
  border: 1px red solid;
}

.addIcon {
  width: 10%;
  height: 100%;
}

.coffeeImg>image {
  width: 2.4rem;
  height: 2.4rem;
}

.goods {
  width: 100%;
  height: 3rem;
}
