/* pages/menu/menu.wxss */
@import '../../style/guide.wxss';

page {
  width: 100%;
  height: 100%;
  background: #f6f6f6;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  justify-content: flex-start;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.header {
  width: 100%;
  height: 35%;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  justify-content: flex-start;
}

.position {
  height: 30%;
  padding:0rpx 20rpx;
  box-sizing: border-box;
}
.position image{
  width: 40%;
  height: 40%;
}
.select{
  border: 1rpx blue solid;
  border-radius: 30rpx;
  padding: 4rpx;
  margin: 30rpx 0rpx;
  box-sizing: border-box;
}
.select text{
  padding: 10rpx 16rpx;
  font-size: 20rpx;
  box-sizing: border-box;
}
.select{
  color: white;
}
.select>text:nth-child(1){
  background-color: #4a86e8;
  border-radius: 24rpx;
}
.select>text:nth-child(2){
  color: #4a86e8;
}
.position>view:nth-child(1){

  width: 10%;
}
.position>view:nth-child(2){

  width: 70%;
}
.position>view:nth-child(3){

  width: 20%;
}
.carousel {
  height: 67%;
}

.section {
  width: 100%;
  height: 65%;
  box-sizing: border-box;
  display: flex;
  display: -webkit-flex;
  font-size: 26rpx;
}

.left {
  width: 20%;
  height: 100%;

}

.right {
  width: 80%;
  height: 100%;
}

scroll-view {
  padding-left: 1rem;
  box-sizing: border-box;
  background-color: white;
}

.title {
  width: 100%;
  height: 10%;
}

.section {
  background-color: gainsboro;
}

.titleSelected {
  background-color: white;
}

.coffeeImg {
  width: 30%;
  height: 100%;
}
.carousel>image{
  width: 100%;
  height: 100%;
}
.info {
  width: 60%;
  height: 100%;
  box-sizing: border-box;
  padding: 1rpx 10rpx;
}
.info>text:nth-child(2){
  color: #666666;
  font-size: .8em;
}
.info>text:nth-child(3){
  color: #666666;
  font-size: .8em;
}

.addIcon {
  width: 10%;
  height: 100%;
}

.coffeeImg>image {
  width:100%;
  height: 100%;
}

.goods {
  width: 100%;
  height: 180rpx;
  padding: 20rpx 0;
  box-sizing:border-box; 
}
.sort{
  border-top: 1rpx gainsboro solid;
  position: relative;
  margin: 20rpx 0rpx;
  padding: 20rpx 0rpx;
  box-sizing: border-box;
}
.top{
  width: 100%;
  height: 1.6em;
  z-index: 0;
  opacity: 0;
  position: relative;
  
}
.caption>text:nth-child(1){
  position: absolute;
  top: -2em;
  z-index: 10;
  background-color: white;
  box-sizing: border-box;
}
.caption>text:nth-child(2){
  position: absolute;
  top: -1em;
  z-index: 10;
  background-color: white;
  color: gainsboro;
  box-sizing: border-box;
  padding-right: 1em;
  font-size: 20rpx;
  }
